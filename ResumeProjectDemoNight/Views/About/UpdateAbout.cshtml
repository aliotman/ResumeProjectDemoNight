@model ResumeProjectDemoNight.Entities.About

@{
    ViewData["Title"] = "Hakkımda Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-2">
                <a href="/Dashboard/Dashboard" class="p-2 hover:bg-gray-800 rounded-lg transition-colors">
                    <span class="material-symbols-outlined text-gray-400">arrow_back</span>
                </a>
                <h2 class="text-2xl font-bold text-white">Hakkımda Bilgilerini Güncelle</h2>
            </div>
            <p class="text-gray-400 text-sm ml-14">Profil bilgilerinizi güncelleyin</p>
        </div>

        <!-- Form -->
        <form method="post" enctype="multipart/form-data" class="space-y-6">
            <input type="hidden" asp-for="AboutId" />

            <!-- Image Upload Card -->
            <div class="bg-card-dark rounded-xl p-6 border border-gray-800">
                <div class="flex items-start gap-6">
                    <div class="flex-shrink-0">
                        <div class="size-32 rounded-lg bg-gray-800 border-2 border-dashed border-gray-700 flex items-center justify-center overflow-hidden">
                            <img id="imagePreview" src="@Model.ImageUrl" alt="Preview" class="w-full h-full object-cover" style="display: @(string.IsNullOrEmpty(Model.ImageUrl) ? "none" : "block")" />
                            <span class="material-symbols-outlined text-gray-600 text-5xl" id="placeholderIcon" style="display: @(string.IsNullOrEmpty(Model.ImageUrl) ? "block" : "none")">person</span>
                        </div>
                    </div>
                    <div class="flex-1">
                        <label class="block text-sm font-medium text-gray-300 mb-2">Profil Fotoğrafı (URL)</label>

                        <input type="hidden" asp-for="ImageUrl" id="RealImageUrl" />

                        <button type="button"
                                onclick="openUrlModal()"
                                class="px-4 py-2 bg-primary hover:bg-blue-600 text-white rounded-lg transition-colors flex items-center gap-2 text-sm font-medium">
                            <span class="material-symbols-outlined text-lg">link</span>
                            Görsel URL Değiştir
                        </button>

                        <p id="urlStatusText" class="text-gray-500 text-xs mt-2">Henüz bir görsel seçilmedi.</p>

                        <img id="imagePreview" src="" class="mt-2 h-20 w-auto rounded hidden object-cover" />
                    </div>
                </div>
            </div>

            <!-- Name Surname -->
            <div class="bg-card-dark rounded-xl p-6 border border-gray-800">
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    Ad Soyad
                    <span class="text-red-400">*</span>
                </label>
                <input type="text"
                       asp-for="NameSurname"
                       class="w-full bg-background-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                       placeholder="Adınız ve soyadınız"
                       required />
            </div>

            <!-- Description -->
            <div class="bg-card-dark rounded-xl p-6 border border-gray-800">
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    Açıklama
                    <span class="text-red-400">*</span>
                </label>
                <textarea asp-for="Description"
                          rows="8"
                          class="w-full bg-background-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                          placeholder="Kendiniz hakkında detaylı bilgi verin..."
                          required></textarea>
                <div class="flex justify-end items-center mt-2">
                    <span class="text-gray-500 text-xs" id="charCount">0 karakter</span>
                </div>
            </div>

            <!-- Info Card -->
            <div class="bg-blue-500/5 border border-blue-500/20 rounded-xl p-4">
                <div class="flex gap-3">
                    <span class="material-symbols-outlined text-blue-400 text-xl flex-shrink-0">info</span>
                    <div>
                        <h4 class="text-blue-400 font-medium text-sm mb-1">Bilgi</h4>
                        <p class="text-gray-400 text-xs">
                            Hakkımda bölümü sitenizin ilk izlenimi için çok önemlidir. Kendinizi profesyonel bir şekilde tanıtın ve yeteneklerinizi vurgulayın.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end gap-3 pt-4">
                <a href="/Dashboard/Dashboard"
                   class="px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition-colors font-medium">
                    İptal
                </a>
                <button type="submit"
                        class="px-6 py-3 bg-primary hover:bg-blue-600 text-white rounded-lg transition-colors font-medium flex items-center gap-2">
                    <span class="material-symbols-outlined text-lg">save</span>
                    Değişiklikleri Kaydet
                </button>
            </div>
        </form>
    </div>
</div>
<div id="urlModal" class="fixed inset-0 z-[60] hidden bg-black/50 backdrop-blur-sm flex items-center justify-center transition-opacity">
    <div class="bg-sidebar-dark border border-slate-800 rounded-xl p-6 w-full max-w-md shadow-2xl transform scale-100 transition-all">

        <h3 class="text-lg font-bold text-white mb-4">Görsel URL'si Girin</h3>

        <div class="mb-4">
            <label class="block text-sm text-slate-400 mb-1">Resim Bağlantısı</label>
            <input type="text"
                   id="modalUrlInput"
                   class="w-full bg-background-dark border border-slate-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-primary placeholder-slate-600"
                   placeholder="https://ornek-site.com/resim.jpg">
        </div>

        <div class="flex justify-end gap-3">
            <button type="button" onclick="closeUrlModal()" class="px-4 py-2 text-slate-400 hover:text-white transition-colors text-sm font-medium">
                İptal
            </button>
            <button type="button" onclick="saveUrlFromModal()" class="px-4 py-2 bg-primary hover:bg-blue-600 text-white rounded-lg text-sm font-medium">
                Onayla
            </button>
        </div>
    </div>
</div>

<script>
    // Modalı Aç
    function openUrlModal() {
        document.getElementById('urlModal').classList.remove('hidden');
        // Varsa mevcut değeri inputa doldur
        document.getElementById('modalUrlInput').value = document.getElementById('RealImageUrl').value;
    }

    // Modalı Kapat
    function closeUrlModal() {
        document.getElementById('urlModal').classList.add('hidden');
    }

    // URL'yi Kaydet ve Önizlemeyi Güncelle
    function saveUrlFromModal() {
        // 1. URL'yi al
        var urlValue = document.getElementById('modalUrlInput').value;

        // 2. Gizli inputa yaz (Veritabanına gidecek olan şey)
        document.getElementById('RealImageUrl').value = urlValue;

        // 3. Arayüzü güncelle
        if (urlValue) {
            // Yazı güncelle
            var kisaUrl = urlValue.length > 30 ? urlValue.substring(0, 30) + "..." : urlValue;
            var statusText = document.getElementById('urlStatusText');
            statusText.innerText = "Seçilen: " + kisaUrl;
            statusText.classList.add('text-green-500');

            // Büyük önizleme resmini güncelle
            var mainPreview = document.getElementById('imagePreview');
            mainPreview.src = urlValue;
            mainPreview.style.display = 'block';

            // İkonu gizle
            document.getElementById('placeholderIcon').style.display = 'none';

        } else {
            // URL yoksa eski haline döndür
            document.getElementById('urlStatusText').innerText = "Henüz bir görsel seçilmedi.";
            document.getElementById('urlStatusText').classList.remove('text-green-500');

            document.getElementById('imagePreview').style.display = 'none';
            document.getElementById('placeholderIcon').style.display = 'block';
        }

        // 4. Modalı kapat
        closeUrlModal();
    }
</script>