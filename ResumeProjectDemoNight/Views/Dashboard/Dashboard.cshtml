@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Welcome Header -->
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-white mb-2">Kontrol Paneli</h2>
            <p class="text-gray-400">Hoş geldiniz! İşte portföyünüzün özeti</p>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total Projects -->
            <div class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="size-12 bg-primary/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-2xl">layers</span>
                    </div>
                    <span class="text-xs text-gray-500">Toplam</span>
                </div>
                <h3 class="text-3xl font-bold text-white mb-1">@ViewBag.TotalProjects</h3>
                <p class="text-gray-400 text-sm">Projeler</p>
            </div>

            <!-- Total Services -->
            <div class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="size-12 bg-green-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-green-400 text-2xl">code</span>
                    </div>
                    <span class="text-xs text-gray-500">Toplam</span>
                </div>
                <h3 class="text-3xl font-bold text-white mb-1">@ViewBag.TotalServices</h3>
                <p class="text-gray-400 text-sm">Hizmetler</p>
            </div>

            <!-- Total Experiences -->
            <div class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="size-12 bg-purple-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-purple-400 text-2xl">work</span>
                    </div>
                    <span class="text-xs text-gray-500">Toplam</span>
                </div>
                <h3 class="text-3xl font-bold text-white mb-1">@ViewBag.TotalExperiences</h3>
                <p class="text-gray-400 text-sm">Deneyimler</p>
            </div>

            <!-- Total Messages -->
            <div class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="size-12 bg-blue-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-blue-400 text-2xl">mail</span>
                    </div>
                    @if (ViewBag.UnreadMessages > 0)
                    {
                        <span class="px-2 py-1 bg-red-500 text-white text-xs rounded-full font-medium">@ViewBag.UnreadMessages</span>
                    }
                    else
                    {
                        <span class="text-xs text-gray-500">Toplam</span>
                    }
                </div>
                <h3 class="text-3xl font-bold text-white mb-1">@ViewBag.TotalMessages</h3>
                <p class="text-gray-400 text-sm">Mesajlar</p>
            </div>
        </div>

        <!-- About Summary Card -->
        @if (ViewBag.About != null)
        {
            <div class="bg-card-dark rounded-xl border border-gray-800 overflow-hidden mb-8">
                <div class="p-6 border-b border-gray-800">
                    <div class="flex items-center justify-between">
                        <h3 class="text-xl font-bold text-white flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">person</span>
                            Hakkımda Özeti
                        </h3>
                        <a href="/About/UpdateAbout/1"
                           class="px-4 py-2 bg-primary/10 hover:bg-primary/20 text-primary rounded-lg transition-colors text-sm font-medium flex items-center gap-2">
                            <span class="material-symbols-outlined text-base">edit</span>
                            Düzenle
                        </a>
                    </div>
                </div>

                <div class="p-6">
                    <div class="flex gap-6">
                        <!-- Profile Image -->
                        <div class="flex-shrink-0">
                            <div class="size-24 rounded-lg bg-gray-800 border-2 border-gray-700 overflow-hidden">
                                @if (!string.IsNullOrEmpty(ViewBag.About.ImageUrl))
                                {
                                    <img src="@ViewBag.About.ImageUrl"
                                         alt="@ViewBag.About.NameSurname"
                                         class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center">
                                        <span class="material-symbols-outlined text-gray-600 text-4xl">person</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Info -->
                        <div class="flex-1">
                            <h4 class="text-2xl font-bold text-white mb-2">@ViewBag.About.NameSurname</h4>
                            <p class="text-gray-300 leading-relaxed line-clamp-3">@ViewBag.About.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Quick Actions -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <a href="@Url.Action("CreatePortfolio", "Portfolio")"
               class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all group">
                <div class="flex items-center gap-4">
                    <div class="size-12 bg-primary/10 rounded-lg flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                        <span class="material-symbols-outlined text-primary text-2xl">add</span>
                    </div>
                    <div>
                        <h4 class="text-white font-semibold">Yeni Proje</h4>
                        <p class="text-gray-400 text-xs">Proje ekle</p>
                    </div>
                </div>
            </a>

            <a href="@Url.Action("CreateService", "Service")"
               class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all group">
                <div class="flex items-center gap-4">
                    <div class="size-12 bg-green-500/10 rounded-lg flex items-center justify-center group-hover:bg-green-500/20 transition-colors">
                        <span class="material-symbols-outlined text-green-400 text-2xl">add</span>
                    </div>
                    <div>
                        <h4 class="text-white font-semibold">Yeni Hizmet</h4>
                        <p class="text-gray-400 text-xs">Hizmet ekle</p>
                    </div>
                </div>
            </a>

            <a href="@Url.Action("CreateExperience", "Experience")"
               class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all group">
                <div class="flex items-center gap-4">
                    <div class="size-12 bg-purple-500/10 rounded-lg flex items-center justify-center group-hover:bg-purple-500/20 transition-colors">
                        <span class="material-symbols-outlined text-purple-400 text-2xl">add</span>
                    </div>
                    <div>
                        <h4 class="text-white font-semibold">Yeni Deneyim</h4>
                        <p class="text-gray-400 text-xs">Deneyim ekle</p>
                    </div>
                </div>
            </a>

            <a href="@Url.Action("MessageList", "Message")"
               class="bg-card-dark rounded-xl p-6 border border-gray-800 hover:border-primary/50 transition-all group">
                <div class="flex items-center gap-4">
                    <div class="size-12 bg-blue-500/10 rounded-lg flex items-center justify-center group-hover:bg-blue-500/20 transition-colors">
                        <span class="material-symbols-outlined text-blue-400 text-2xl">mail</span>
                    </div>
                    <div>
                        <h4 class="text-white font-semibold">Mesajlar</h4>
                        <p class="text-gray-400 text-xs">Mesajları görüntüle</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
