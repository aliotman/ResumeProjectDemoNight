@model ResumeProjectDemoNight.Entities.Experience

@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Header Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Deneyim Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">Çalışma deneyiminizi eklemek için aşağıdaki formu doldurun.</p>
            </div>
            <a href="/Experience/ExperienceList/" class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size: 20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <!-- Company Name -->
                    <div class="space-y-2">
                        <label for="CompanyName" class="block text-sm font-semibold text-slate-300">
                            Şirket Adı
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">business</span>
                            <input type="text"
                                   id="CompanyName"
                                   name="CompanyName"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: Google, Microsoft"
                                   required />
                        </div>
                    </div>

                    <!-- Title -->
                    <div class="space-y-2">
                        <label for="Title" class="block text-sm font-semibold text-slate-300">
                            Pozisyon / Unvan
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">badge</span>
                            <input type="text"
                                   id="Title"
                                   name="Title"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: Senior Software Developer"
                                   required />
                        </div>
                    </div>

                    <!-- Work Period -->
                    <div class="space-y-2">
                        <label for="WorkPeriodDate" class="block text-sm font-semibold text-slate-300">
                            Çalışma Dönemi
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">calendar_month</span>
                            <input type="text"
                                   id="WorkPeriodDate"
                                   name="WorkPeriodDate"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: Ocak 2020 - Aralık 2023"
                                   required />
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Çalışma sürenizi belirtin (Örn: "Haziran 2020 - Devam Ediyor")</p>
                    </div>

                    <!-- Description -->
                    <div class="space-y-2">
                        <label for="Description" class="block text-sm font-semibold text-slate-300">
                            Açıklama
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-4 material-symbols-outlined text-slate-500" style="font-size: 20px;">description</span>
                            <textarea id="Description"
                                      name="Description"
                                      rows="6"
                                      class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                                      placeholder="Pozisyonunuzda yaptığınız işleri, kullandığınız teknolojileri ve başarılarınızı detaylı bir şekilde açıklayın..."
                                      required></textarea>
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Sorumluluklarınızı ve başarılarınızı detaylı bir şekilde yazın.</p>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size: 20px;">save</span>
                            Deneyimi Kaydet
                        </button>
                        <a href="/Experience/ExperienceList/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size: 20px;">close</span>
                            İptal Et
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <div id="urlModal" class="fixed inset-0 z-[60] hidden bg-black/50 backdrop-blur-sm flex items-center justify-center transition-opacity">
            <div class="bg-sidebar-dark border border-slate-800 rounded-xl p-6 w-full max-w-md shadow-2xl transform scale-100 transition-all">

                <h3 class="text-lg font-bold text-white mb-4">Görsel URL'si Girin</h3>

                <div class="mb-4">
                    <label class="block text-sm text-slate-400 mb-1">Resim Bağlantısı</label>
                    <input type="text"
                           id="modalUrlInput"
                           class="w-full bg-background-dark border border-slate-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-primary placeholder-slate-600"
                           placeholder="https://ornek-site.com/resim.jpg">
                </div>

                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeUrlModal()" class="px-4 py-2 text-slate-400 hover:text-white transition-colors text-sm font-medium">
                        İptal
                    </button>
                    <button type="button" onclick="saveUrlFromModal()" class="px-4 py-2 bg-primary hover:bg-blue-600 text-white rounded-lg text-sm font-medium">
                        Onayla
                    </button>
                </div>
            </div>
        </div>

        <script>
            // Modalı Aç
            function openUrlModal() {
                document.getElementById('urlModal').classList.remove('hidden');
                // Varsa mevcut değeri inputa doldur
                document.getElementById('modalUrlInput').value = document.getElementById('RealImageUrl').value;
            }

            // Modalı Kapat
            function closeUrlModal() {
                document.getElementById('urlModal').classList.add('hidden');
            }

            // URL'yi Kaydet ve Önizlemeyi Güncelle
            function saveUrlFromModal() {
                // 1. URL'yi al
                var urlValue = document.getElementById('modalUrlInput').value;

                // 2. Gizli inputa yaz (Veritabanına gidecek olan şey)
                document.getElementById('RealImageUrl').value = urlValue;

                // 3. Arayüzü güncelle
                if (urlValue) {
                    // Yazı güncelle
                    var kisaUrl = urlValue.length > 30 ? urlValue.substring(0, 30) + "..." : urlValue;
                    var statusText = document.getElementById('urlStatusText');
                    statusText.innerText = "Seçilen: " + kisaUrl;
                    statusText.classList.add('text-green-500');

                    // Büyük önizleme resmini güncelle
                    var mainPreview = document.getElementById('imagePreview');
                    mainPreview.src = urlValue;
                    mainPreview.style.display = 'block';

                    // İkonu gizle
                    document.getElementById('placeholderIcon').style.display = 'none';

                } else {
                    // URL yoksa eski haline döndür
                    document.getElementById('urlStatusText').innerText = "Henüz bir görsel seçilmedi.";
                    document.getElementById('urlStatusText').classList.remove('text-green-500');

                    document.getElementById('imagePreview').style.display = 'none';
                    document.getElementById('placeholderIcon').style.display = 'block';
                }

                // 4. Modalı kapat
                closeUrlModal();
            }
        </script>
